                            <option value="Passport">Passport</option>
                            <option value="Other">Other</option>
                        </select>
                        </div>
                    </div>
                    <div class="sm:col-span-4">
                        <label class="block text-sm font-medium leading-6 text-gray-900">ID Number *</label>
                        <div class="mt-2">
                        <input name="ID_no" value="<%= ID_no%>" type="text"  class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" />
                        </div>
                    </div>


                    <div class="col-span-full">
                        <label class="block text-sm font-medium leading-6 text-gray-900">Address Line 1&#42</label>
                        <div class="mt-2">
                        <input type="text" name="Add_l1" value="<%= Add_l1%>"  class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" />
                        </div>
                    </div>
                    <div class="col-span-full">
                        <label class="block text-sm font-medium leading-6 text-gray-900">Address Line 2</label>
                        <div class="mt-2">
                        <input type="text" name="Add_l1" value="<%= Add_l2%>"  class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" />
                        </div>
                    </div>

                    <div class="sm:col-span-2 sm:col-start-1">
                        <label for="city" class="block text-sm font-medium leading-6 text-gray-900">City&#42</label>
                        <div class="mt-2">
